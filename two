  AutoScalingCPUCreditBalanceAlarm:
    Type: 'AWS::CloudWatch::Alarm'
    Properties:
      AlarmDescription: 'AutoScaling gt-servlet CPU Credit Balance Less than 100'
      Namespace: 'AWS/EC2'
      Dimensions:
      - Name: AutoScalingGroupName
        Value:
          !Ref EDDASG
      MetricName: CPUCreditBalance
      ComparisonOperator: LessThanOrEqualToThreshold
      Statistic: Average
      Period: 60
      EvaluationPeriods: 10
      Threshold: 60
      AlarmActions:
        - !Sub "arn:aws:sns:${AWS::Region}:${AWS::AccountId}:compass-alarm-notification"
        - !Sub "{{resolve:ssm:/a${AssetInsightId}/${ServiceEnvironment}/DevNotificationEMail:1}}"
      OKActions:
        - !Sub "arn:aws:sns:${AWS::Region}:${AWS::AccountId}:compass-alarm-notification"
        - !Sub "{{resolve:ssm:/a${AssetInsightId}/${ServiceEnvironment}/DevNotificationEMail:1}}"
