
  AutoScalingMaxInstanceCPUUtilizationAlarm:
    Type: 'AWS::CloudWatch::Alarm'
    Properties:
      AlarmDescription: 'AutoScaling Group CPU Utilization'
      Namespace: 'AWS/EC2'
      Dimensions:
      - Name: AutoScalingGroupName
        Value:
          !Ref EDDASG
      MetricName: CPUUtilization
      ComparisonOperator: GreaterThanOrEqualToThreshold
      Statistic: Average
      Period: 60
      EvaluationPeriods: 8
      Threshold: 60
      AlarmActions:
        - !Sub "arn:aws:sns:${AWS::Region}:${AWS::AccountId}:compass-alarm-notification"
      OKActions:
        - !Sub "arn:aws:sns:${AWS::Region}:${AWS::AccountId}:compass-alarm-notification"
